{
  "compilerOptions": {
    "lib": ["es6"],
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "declaration": true,
    "rootDir": ".",
    "outDir": "dist",
    "types": ["node", "jasmine"],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "index.ts",
    "src/**/*",
    "lib/**/*",
    "spec/**/*"
  ]
}